@model IEnumerable<WebApplication3.Models.ClaimInfo>

@{
    ViewBag.Title = "ClaimList";
}

<h2>ClaimList</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PolicyInfo.Policy_Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegistrationInfo.Registration_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Claim_Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Claim_Reason)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Claim_Approval_Result)
        </th>
