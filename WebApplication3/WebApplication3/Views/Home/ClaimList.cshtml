    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PolicyInfo.Policy_Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegistrationInfo.Registration_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Claim_Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Claim_Reason)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Claim_Approval_Result)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Claim_Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Claim_Approved_Amount)
        </td>
        <td>
            @Html.ActionLink("Edit", "ClaimEdit", new { id=item.Claim_Number }) |
            @Html.ActionLink("Delete", "ClaimDelete", new { id=item.Claim_Number })
        </td>
